{
  "name": "solidity-docgen",
  "version": "0.2.0-alpha.1",
  "description": "Solidity API documentation automatic generator.",
  "bin": {
    "solidity-docgen": "./dist/cli.js"
  },
  "files": [
    "dist",
    "page.hbs"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "ava",
    "test:watch": "concurrently -krs first -n ava,tsc 'ava --watch' 'tsc --watch --preserveWatchOutput'",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@oclif/command": "^1.5.15",
    "@oclif/config": "^1.13.0",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^2.2.0",
    "execall": "^2.0.0",
    "fs-extra": "^8.0.1",
    "globby": "^9.2.0",
    "handlebars": "^4.1.2",
    "js-yaml": "^3.12.2",
    "lodash": "^4.17.11",
    "minimatch": "^3.0.4",
    "semver": "^6.1.2",
    "solc": "^0.5.10",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.135",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^12.0.10",
    "@types/semver": "^6.0.1",
    "@types/vinyl": "^2.0.3",
    "@types/vinyl-fs": "^2.4.11",
    "ava": "^2.1.0",
    "concurrently": "^4.1.1"
  },
  "keywords": [
    "solidity",
    "api",
    "documentation",
    "automatic",
    "generator"
  ],
  "author": "spalladino@gmail.com",
  "contributors": [
    "Emilio Almansi <ealmansi@gmail.com> (http://ealmansi.github.io/)"
  ],
  "license": "MIT"
}
