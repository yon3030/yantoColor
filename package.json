    "solc": "^0.5.4",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.134",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^12.0.10",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0"
  },
  "keywords": [
    "solidity",
    "api",
    "documentation",
    "automatic",
    "generator"
  ],
